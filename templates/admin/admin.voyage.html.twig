{% extends "baseAdmin.html.twig" %}
{% block body %}
    <a href="{{ path('admin.voyage.ajout') }}" class="btn btn-primary">Ajouter une nouvelle visite</a>
<table class="table table-striped">
    <thead>
        <tr>
    <th>Ville</th>
    <th>Pays</th>
    <th>Date</th>
    <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for visite in visites %}
            <tr><td><h5 class="text-primary">{{ visite.ville }}</h5></td>
                <td>{{ visite.pays }}</td>
                <td>{{ visite.datecreationstring }}</td>
                <td>
                    <a href="{{ path("admin.voyage.edit", {id:visite.id}) }}" class="btn btn-secondary">Editer</a>
                    <a href="{{ path("admin.voyage.suppr", {id:visite.id}) }}" onclick="return confirm('Etes-vous sur de vouloir supprimer {{ visite.ville }}?')" class="btn btn-danger">Supprimer</a>
                    
                </td>
            </tr>
                
        {% endfor %}
    </tbody></table>
{% endblock %}